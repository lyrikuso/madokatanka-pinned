{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.nuxt/**",
      "**/assets/**",
      "**/components/**",
      "**/lauouts/**",
      "**/middleware/**",
      "**/pages/**",
      "**/plugins/**",
      "**/server/**",
      "**/static/**",
      "**/store/**",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/contents/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
